<div class="notice">
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><span class="book_title"><%= book.title %></span></td>
      <td><span class="book"><%= book.body %></span></td>
      <td><span class="book_show"><%= link_to "Show", book_path(book.id) %></span></td>
      <td><span class="book_edit"><%= link_to "Edit", edit_book_path(book.id) %></span></td>
      <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <% if @book.errors.any? %>
  <div class="errors">
    <%= @book.errors.count %>errors prohibited this book from being saved:
  </div>
  <div class="errors_message">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <footer>
    <div class="field_title">Title</div>
    <%= f.text_field :title %>

    <div class="field_body">Body</div>
    <%= f.text_area :body %>
    <br><%= f.submit 'Create Book' %></br>
  </footer>
<% end %>

</html>
